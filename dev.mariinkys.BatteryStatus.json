{
    "app-id": "dev.mariinkys.BatteryStatus",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "24.08",
    "sdk": "org.freedesktop.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command": "battery-status",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin"
    },
    "modules": [
        {
            "name": "battery-status",
            "buildsystem": "simple",
            "build-options": {
                "env": {
                    "CARGO_HOME": "/run/build/battery-status/cargo"
                }
            },
            "build-commands": [
                "cargo --offline fetch --manifest-path Cargo.toml --verbose",
                "cargo --offline build --release --verbose",
                "install -Dm0755 ./target/release/battery-status /app/bin/battery-status",
                "install -Dm0644 ./resources/dev.mariinkys.BatteryStatus.desktop /app/share/applications/dev.mariinkys.BatteryStatus.desktop",
                "install -Dm0644 ./resources/dev.mariinkys.BatteryStatus.metainfo.xml /app/share/metainfo/dev.mariinkys.BatteryStatus.metainfo.xml",
                "install -Dm0644 ./resources/icons/hicolor/256x256/apps/icon.png /app/share/icons/hicolor/256x256/apps/dev.mariinkys.BatteryStatus.png",
                "install -Dm0644 ./resources/icons/hicolor/scalable/apps/icon.svg /app/share/icons/hicolor/scalable/apps/dev.mariinkys.BatteryStatus.svg"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                },
                "cargo-sources.json"
            ]
        }
    ]
}